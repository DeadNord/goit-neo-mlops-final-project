#General
region  = "eu-central-1"
profile = "default"
tags = {
  Environment = "dev"
}

#BackEnd
backend_bucket = "hw-8-9-terraform-state-bucket"

#VPC
vpc_name             = "hw-8-9-vpc"
vpc_cidr             = "10.0.0.0/16"
public_subnets       = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets      = ["10.0.4.0/24", "10.0.5.0/24"]
availability_zones   = ["eu-central-1a", "eu-central-1b"]
enable_nat_gateway   = true
enable_dns_hostnames = true
enable_dns_support   = true
single_nat_gateway   = true

#EKS
cluster_name                    = "hw-8-9-eks"
cluster_version                 = "1.29"
vpc_state_bucket                = "hw-8-9-terraform-state-bucket"
vpc_state_key                   = "vpc/terraform.tfstate"
vpc_state_region                = "eu-central-1"
cluster_endpoint_public_access  = true
cluster_endpoint_private_access = true
cluster_public_access_cidrs     = ["0.0.0.0/0"]
cluster_admin_users             = []

cpu_instance_type = "t3.small"
gpu_instance_type = "g4dn.xlarge"

cpu_min_size     = 3
cpu_max_size     = 3
cpu_desired_size = 3

gpu_min_size     = 0
gpu_max_size     = 1
gpu_desired_size = 0